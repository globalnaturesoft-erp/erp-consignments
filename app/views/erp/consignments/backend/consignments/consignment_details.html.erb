<div class="col-md-12">
    <div class="alert alert-info text-left">
        <strong><i class="fa fa-user"></i> Nhân viên phụ trách: </strong> <%= @consignment.contact_name %> &nbsp;&nbsp;
        <strong><i class="fa fa-file-text"></i> Loại phiếu: </strong> <%= t("."+@consignment.consignment_type) %> &nbsp;&nbsp;
        <strong><i class="fa fa-plus-square"></i> Số lượng đã xuất: </strong> <%= @consignment.total_quantity %> &nbsp;&nbsp;
        <strong><i class="fa fa-minus-square"></i> Số lượng đã trả: </strong> 0 &nbsp;&nbsp;
        <strong><i class="fa fa-exchange"></i> Số lượng còn lại: </strong> 10 &nbsp;&nbsp;
    </div>
    <div class="tabbable-custom ">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#tab_5_1" data-toggle="tab">
                    <i class="fa fa-navicon"></i>
                    Chi tiết đã xuất
                </a>
            </li>
            <li>
                <a href="#tab_5_2" data-toggle="tab">
                    <i class="fa fa-navicon"></i>
                    Chi tiết đã trả
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_5_1">
            <div class="portlet grey-cascade box">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cubes"></i>
                        <%= t('.consignment_details') %>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped flip-content">
                            <thead class="flip-content">
                                <tr>
                                    <th width="20%" class="text-left"><%= t('.code') %></th>
                                    <th><%= t('.name') %></th>
                                    <th class="numeric"><%= t('.quantity') %></th>
                                    <th class="text-right"><%= t('.unit') %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @consignment.consignment_details.each do |consignment_detail| %>
                                <tr>
                                    <td class="text-left">
                                        <strong><%= link_to "#" + consignment_detail.get_product_code, erp_products.edit_backend_product_path(consignment_detail.product), target: '_blank' %></strong>
                                    </td>
                                    <td class="text-left"><%= consignment_detail.get_product_name %></td>
                                    <td class="numeric text-left"><%= consignment_detail.quantity %></td>
                                    <td class="text-right"><%= consignment_detail.get_product_unit %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_5_2">
            <div class="portlet grey-cascade box">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cubes"></i>
                        Chi tiết đã trả
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped flip-content">
                            <thead class="flip-content">
                                <tr>
                                    <th width="20%" class="text-left"><%= t('.code') %></th>
                                    <th><%= t('.name') %></th>
                                    <th class="numeric"><%= t('.quantity') %></th>
                                    <th class="text-right"><%= t('.unit') %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-left">
                                        <strong><%= link_to "#0111111", "", target: '_blank' %></strong>
                                    </td>
                                    <td class="text-left"></td>
                                    <td class="numeric text-right"></td>
                                    <td class="text-right"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>