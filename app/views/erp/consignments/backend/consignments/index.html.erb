<% content_for :title do %>
    <%= t('.consignments') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-cubes"></i> <%= t('.consignments') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_consignments.new_backend_consignment_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_consignments.list_backend_consignments_path,
    keywords: [
        {
            text: t('.code'), name: 'erp_consignments_consignments.code'
        },
        {
            text: t('.contact'),
            name: 'erp_contacts_contacts.name',
            select: {
                name: 'erp_contacts_contacts.id',
                data_url: erp_contacts.dataselect_backend_contacts_path
            }
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-file-o"></i> '+t('.change_draft'),
            url: erp_consignments.status_draft_all_backend_consignments_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-file-text-o"></i> '+t('.change_active'),
            url: erp_consignments.status_active_all_backend_consignments_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-file-text"></i> '+t('.change_delivered'),
            url: erp_consignments.status_delivered_all_backend_consignments_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.change_deleted'),
            url: erp_consignments.status_deleted_all_backend_consignments_path,
            data_method: 'PUT',
            data_confirm: t('.change_deleted_confirm')
        }
    ],
    filters: [
        {
            text: t('.is_type_consign'), name: 'erp_consignments_consignments.consignment_type', value: 'consign', checked: false
        },
        {
            text: t('.is_type_lend'), name: 'erp_consignments_consignments.consignment_type', value: 'lend', checked: false
        },
        {
            divider: true
        },
        {
            text: t('.is_draft'), name: 'erp_consignments_consignments.status', value: 'draft', checked: false
        },
        {
            text: t('.is_active'), name: 'erp_consignments_consignments.status', value: 'active', checked: false
        },
        {
            text: t('.is_delivered'), name: 'erp_consignments_consignments.status', value: 'delivered', checked: false
        },
        {
            text: t('.is_deleted'), name: 'erp_consignments_consignments.status', value: 'deleted', checked: false
        }
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.contact'), name: 'contact', value: true, checked: true
        },
        {
            text: t('.sent_date'), name: 'sent_date', value: true, checked: true
        },
        {
            text: t('.return_date'), name: 'return_date', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_consignments_consignments.created_at', sort_direction: 'desc' }
) %>